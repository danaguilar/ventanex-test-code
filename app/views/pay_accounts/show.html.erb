<%= form_with model: @pay_account, local: true, class: 'card account-form bg-light mt-4' do |form| %>
  <h4 class="card-header">New Pay Account</h4>
  <div class="form-group card-body">
    <div class="container">
    <div class="row my-3">
      <%= form.label :nickname, class: "col-sm-3 col-form-label" %>
      <div class="col-sm-9">
        <%= form.text_field :nickname, class: "form-control-plaintext" %>
      </div>
    </div>

    <div class="row my-3">
      <%= form.label :account_type, class: "col-sm-3 col-form-label" %>
      <div class="col-sm-9">
        <%= text_field_tag :account_type, @pay_account.account_type.humanize, class: "form-control-plaintext" %>
      </div>
    </div>

    <div class="row my-3">
      <%= form.label :account_number, class: "col-sm-3 col-form-label" %>
      <div class="col-sm-9">
        <%= form.text_field :account_number, class: "form-control-plaintext" %>
      </div>
    </div>
  </div>
<% end %>