<div class="col-md-12 mt-2">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3>
        Pay Accounts
      </h3>
    </div>
    <div class="panel-body">
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Nickname</th>
              <th>Account Type</th>
              <th>Account Number</th>
              <th>
                <%= link_to "Create", new_pay_account_path, class: "btn btn-success" %>
              </th>
            </tr>
          </thead>
          <tbody>
            <% @pay_accounts.each do |pay_account| %>
              <tr>
                <td><%= pay_account.nickname %></td>
                <td><%= pay_account.account_type.humanize %></td>
                <td>
                  <span data-account-number><%= pay_account.account_number %></span>
                  <button type="button" data-hide-button class="btn btn-sm btn-secondary">hide</button>
                </td>
                <td>
                  <%= button_to "Show", pay_account_url(pay_account), class: "btn btn-warning", type: "button", method: :get %>
                  <%= button_to "Delete", pay_account_url(pay_account), class: "btn btn-danger", type: "button", method: :delete, data: {confirm: "Are you sure you want to delete #{pay_account.nickname}?"}  %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <br><br>
    <div class="panel-heading">
      <h3>
        Loan Accounts
      </h3>
    </div>
    <div class="panel-body">
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Loan Number</th>
              <th>Borrow Name</th>
            </tr>
          </thead>
          <tbody>
            <% @loan_accounts.each do |loan_account| %>
              <tr>
                <td><%= loan_account[:LoanNumber] %></td>
                <td><%= loan_account[:BorrowerFullNameUnformated] %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
